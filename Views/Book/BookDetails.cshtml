@{
    ViewData["Title"] = "Book Details";
    Layout = "_Layout";
}

<div class="container lair">
    <div class="text-center">
        <h1 class="title">Book Details</h1>
    </div>
    <div class="card mt-3">
        <div class="card-header bg-secondary">
            <h4>@Model.Title</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4 d-flex justify-content-center align-items-center">
                    <img class="coverImg" src="@Model.CoverImageUrl" alt="@Model.Title cover image" />
                </div>
                <div class="col-8">
                    <p><strong>Author:</strong> @Model.Author</p>
                    <p><strong>Publish Date:</strong> @Model.PublishDate.ToString("yyyy")</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                </div>
            </div>
        </div>
    </div>
    <a href="@Url.Action("BookList", "Home")" class="btn btn-primary mt-3">Back to Book List</a>
</div>