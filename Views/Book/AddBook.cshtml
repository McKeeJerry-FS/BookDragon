@model BookDragon.Models.Book

@{
    ViewData["Title"] = "Add Book";
    Layout = "_Layout";
    var categories = ViewBag.Categories as List<SelectListItem>;
}

<h1 class="title">@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label text-danger"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Author" class="form-label text-danger"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Genre" class="form-label text-danger"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label text-danger"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PublishedDate" class="form-label text-danger"></label>
        <input asp-for="PublishedDate" type="date" class="form-control" />
        <span asp-validation-for="PublishedDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PageCount" class="form-label text-danger"></label>
        <input asp-for="PageCount" type="number" class="form-control" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CoverImageUrl" class="form-label text-danger"></label>
        <input asp-for="CoverImageUrl" type="url" class="form-control" />
        <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label text-danger"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Add Book</button>
        <a asp-action="BookList" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
