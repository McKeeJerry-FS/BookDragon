@model BookDragon.ViewModels.PagedBookListViewModel

@{
    ViewData["Title"] = "Your Books";
}
<div class="container lair">
    <div class="text-center">
        <h1 class="title">Your Books</h1>
    </div>
    @if (Model?.Books != null && Model.Books.Any())
    {
        <ul class="list-unstyled text-light">
            @foreach (var book in Model.Books)
            {
                <li>
                    <div class="card mt-3">
                        <div class="card-title">
                            <h4>@book.Title</h4>
                        </div>
                        <div class="card-body">
                            <p><strong>Author:</strong> @book.Author</p>
                            <p><strong>Genre:</strong> @book.Genre</p>
                            <p><strong>Published:</strong> @book.PublishedDate.ToShortDateString()</p>
                            <a class="btn btn-sm btn-primary" asp-controller="Book" asp-action="BookDetails" asp-route-id="@book.Id">Details</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <nav aria-label="Book pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="BookList" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="BookList" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="BookList" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info mt-4">No books found. Add your first book!</div>
    }
    <div class="d-flex justify-content-center align-items-center mt-3">
        <a class="btn lairBtn" asp-area="" asp-controller="Home" asp-action="Index">Return to Home</a>
    </div>
</div>
