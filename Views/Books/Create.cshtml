@model BookDragon.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1 class="subtitle text-danger">Add a New Book</h1>
<hr />
<div class="row">
    <div class="col-md-4">
    <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label text-white"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label text-white"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Genre" class="control-label text-white"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div> *@
            @* <div class="form-group">
                <label asp-for="PublishedDate" class="control-label text-white"></label>
                <input asp-for="PublishedDate" class="form-control" type="date" />
                <span asp-validation-for="PublishedDate" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Description" class="control-label text-white"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="PageCount" class="control-label text-white"></label>
                <input asp-for="PageCount" class="form-control" />
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label text-white">Cover Image</label>
                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                @if (Model.ImageData != null && Model.ImageData.Length > 0)
                {
                    var imageBase64 = Convert.ToBase64String(Model.ImageData);
                    var imageSrc = $"data:{Model.ImageType};base64,{imageBase64}";
                    <div class="mt-2">
                        <img src="@imageSrc" alt="Preview" class="img-thumbnail" style="max-width:120px;" />
                    </div>
                }
                <input type="hidden" asp-for="ImageType" />
                <input type="hidden" asp-for="ImageData" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label text-white">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select a Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookType" class="control-label text-white">Book Type</label>
                <select asp-for="BookType" class="form-control" asp-items="Html.GetEnumSelectList<BookDragon.Enums.BookType>()">
                    <option value="">-- Select Book Type --</option>
                </select>
                <span asp-validation-for="BookType" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label class="control-label text-white d-block">Have Read?</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="HaveRead" value="true" id="haveReadYes">
                    <label class="form-check-label text-white" for="haveReadYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="HaveRead" value="false" id="haveReadNo" checked>
                    <label class="form-check-label text-white" for="haveReadNo">No</label>
                </div>
            </div>
            <div class="form-group mt-2">
                <label class="control-label text-white d-block">Wishlist?</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsWishlist" value="true" id="wishYes">
                    <label class="form-check-label text-white" for="wishYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsWishlist" value="false" id="wishNo" checked>
                    <label class="form-check-label text-white" for="wishNo">No</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label text-white">Rating</label>
                <div class="rating-input">
                    <div class="star-rating">
                        <input type="radio" id="star5" name="Rating" value="5" />
                        <label for="star5" title="5 stars">★</label>
                        <input type="radio" id="star4" name="Rating" value="4" />
                        <label for="star4" title="4 stars">★</label>
                        <input type="radio" id="star3" name="Rating" value="3" />
                        <label for="star3" title="3 stars">★</label>
                        <input type="radio" id="star2" name="Rating" value="2" />
                        <label for="star2" title="2 stars">★</label>
                        <input type="radio" id="star1" name="Rating" value="1" />
                        <label for="star1" title="1 star">★</label>
                    </div>
                </div>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="RatingReason" class="control-label text-white">Why did you give this rating?</label>
                <textarea asp-for="RatingReason" class="form-control" rows="3" placeholder="Share your thoughts about this book...">@Model.RatingReason</textarea>
                <span asp-validation-for="RatingReason" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="ImageData" class="control-label text-danger"></label>
                <input asp-for="ImageData" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageType" class="control-label text-danger"></label>
                <input asp-for="ImageType" class="form-control" />
                <span asp-validation-for="ImageType" class="text-danger"></span>
            </div> *@
            @* UserId is set server-side; no field needed *@
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


