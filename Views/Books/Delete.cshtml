@model BookDragon.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="subtitle text-danger mb-0">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Book
        </h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
            <i class="bi bi-arrow-left me-2"></i>Back to Details
        </a>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger bg-danger bg-opacity-75 border-0 shadow-lg mb-4" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill display-4 me-3"></i>
            <div>
                <h4 class="alert-heading mb-2">Are you sure you want to delete this book?</h4>
                <p class="mb-0">This action cannot be undone. All information about this book will be permanently removed from your collection.</p>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column: Book Cover -->
        <div class="col-lg-4">
            <div class="card bg-dark bg-opacity-75 border-danger border-2 shadow-lg">
                <div class="card-header bg-danger bg-opacity-75 border-0">
                    <h5 class="mb-0 text-white">
                        <i class="bi bi-image me-2"></i>Book Cover
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="book-detail-cover-container">
                        @if (Model.ImageData != null && Model.ImageData.Length > 0)
                        {
                            var imageBase64 = Convert.ToBase64String(Model.ImageData);
                            var imageSrc = $"data:{Model.ImageType};base64,{imageBase64}";
                            <img src="@imageSrc" alt="@Model.Title Cover" class="book-detail-cover opacity-75" />
                        }
                        else
                        {
                            <img src="/img/img_placeholder.jpg" alt="No Cover Available" class="book-detail-cover opacity-75" />
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Book Details -->
        <div class="col-lg-8">
            <div class="card bg-dark bg-opacity-75 border-0 shadow-lg">
                <div class="card-header bg-secondary bg-opacity-75 border-0">
                    <h5 class="mb-0 text-white">
                        <i class="bi bi-info-circle me-2"></i>Book Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <h2 class="text-warning mb-1" style="font-family: 'Merienda', cursive; font-size: 2rem;">
                        @Model.Title
                    </h2>
                    <p class="text-white-50 mb-4" style="font-size: 1.1rem;">
                        <i class="bi bi-person-fill me-2"></i>by @Model.Author
                    </p>

                    <hr class="border-secondary mb-4" />

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="info-display p-3 rounded bg-secondary bg-opacity-25">
                                <small class="text-white-50 d-block mb-1">
                                    <i class="bi bi-bookmark-fill me-2"></i>Category
                                </small>
                                <strong class="text-white">@(Model.Category != null ? Model.Category.Name : "Uncategorized")</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-display p-3 rounded bg-secondary bg-opacity-25">
                                <small class="text-white-50 d-block mb-1">
                                    <i class="bi bi-book-fill me-2"></i>Book Type
                                </small>
                                <strong class="text-white">@Model.BookType</strong>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex flex-wrap gap-2">
                            @if (Model.HaveRead)
                            {
                                <span class="badge bg-success px-3 py-2">
                                    <i class="bi bi-check-circle-fill me-1"></i> Already Read
                                </span>
                            }
                            @if (Model.IsWishlist)
                            {
                                <span class="badge bg-danger px-3 py-2">
                                    <i class="bi bi-heart-fill me-1"></i> Wishlist
                                </span>
                            }
                            @if (Model.Rating.HasValue)
                            {
                                <span class="badge bg-warning text-dark px-3 py-2">
                                    <i class="bi bi-star-fill me-1"></i> Rated @Model.Rating/5
                                </span>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h6 class="text-white-50 mb-2">
                                <i class="bi bi-file-text me-2"></i>Description
                            </h6>
                            <p class="text-white" style="line-height: 1.6;">@Model.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.RatingReason))
                    {
                        <div class="rating-reason-display p-3 rounded bg-warning bg-opacity-10 border-start border-warning border-3">
                            <h6 class="text-warning mb-2">
                                <i class="bi bi-chat-quote-fill me-2"></i>Your Thoughts
                            </h6>
                            <p class="text-white mb-0 fst-italic">"@Model.RatingReason"</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Confirmation Actions -->
            <div class="card bg-dark bg-opacity-75 border-0 shadow-lg mt-4">
                <div class="card-body p-4">
                    <h5 class="text-white mb-3">
                        <i class="bi bi-question-circle me-2"></i>What would you like to do?
                    </h5>
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex flex-wrap gap-3">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash-fill me-2"></i>Yes, Delete This Book
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-x-circle me-2"></i>No, Keep It
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
