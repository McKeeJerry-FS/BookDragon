@model IEnumerable<BookDragon.Models.Book>

@{
    ViewData["Title"] = "Index";
    string? currentSort = ViewData["CurrentSort"] as string;
    string Icon(string ascKey, string descKey)
    {
        if (currentSort == ascKey) return "<i class='bi bi-sort-alpha-down ms-1'></i>"; // currently ascending
        if (currentSort == descKey) return "<i class='bi bi-sort-alpha-up ms-1'></i>";   // currently descending
        return "<i class='bi bi-arrow-down-up opacity-50 ms-1'></i>"; // unsorted
    }
}

<h1 class="subtitle text-danger">Lair's Inventory</h1>

<div class="mb-3 p-3 border rounded bg-dark bg-opacity-50">
    <form method="get" asp-action="Index" class="row g-2 align-items-end">
        <input type="hidden" name="sortOrder" value="@currentSort" />
        <div class="col-sm-3">
            <label for="search" class="form-label text-white">Search</label>
            <input type="text" id="search" name="search" value="@((string?)ViewData["Search"])" class="form-control" placeholder="Title / Author / Description" />
        </div>
        <div class="col-sm-3">
            <label for="categoryId" class="form-label text-white">Category</label>
            <select id="categoryId" name="categoryId" class="form-select">
                <option value="">-- All Categories --</option>
                @{
                    var cats = ViewData["Categories"] as SelectList;
                    var selectedCat = ViewData["FilterCategoryId"] as int?; 
                    if (cats != null)
                    {
                        foreach (var c in cats)
                        {
                            <option value="@c.Value" selected="@(selectedCat.HasValue && selectedCat.Value.ToString() == c.Value ? "selected" : null)">@c.Text</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-sm-2">
            <label class="form-label text-white">Have Read</label>
            <select name="haveRead" class="form-select">
                <option value="" selected="@(ViewData["FilterHaveRead"] == null ? "selected" : null)">Any</option>
                <option value="true" selected="@(((bool?)ViewData["FilterHaveRead"]) == true ? "selected" : null)">Yes</option>
                <option value="false" selected="@(((bool?)ViewData["FilterHaveRead"]) == false ? "selected" : null)">No</option>
            </select>
        </div>
        <div class="col-sm-2">
            <label class="form-label text-white">Wishlist</label>
            <select name="wishlist" class="form-select">
                <option value="" selected="@(ViewData["FilterWishlist"] == null ? "selected" : null)">Any</option>
                <option value="true" selected="@(((bool?)ViewData["FilterWishlist"]) == true ? "selected" : null)">Yes</option>
                <option value="false" selected="@(((bool?)ViewData["FilterWishlist"]) == false ? "selected" : null)">No</option>
            </select>
        </div>
        <div class="col-sm-2 d-flex gap-2">
            <button type="submit" class="btn btn-secondary w-100">Filter</button>
            <a asp-action="Index" class="btn btn-outline-light">Reset</a>
        </div>
    </form>
    <div class="mt-2">
        <a asp-action="Create" class="btn btn-primary btn-sm">Add New Book</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Cover</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    @Html.DisplayNameFor(model => model.Title) @Html.Raw(Icon("title","title_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AuthorSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    @Html.DisplayNameFor(model => model.Author) @Html.Raw(Icon("author","author_desc"))
                </a>
            </th>
            <th class="col-desc">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DescSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    @Html.DisplayNameFor(model => model.Description) @Html.Raw(Icon("desc","desc_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    @Html.DisplayNameFor(model => model.BookType) @Html.Raw(Icon("type","type_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CategorySort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["Filter Wishlist"]">
                    @Html.DisplayNameFor(model => model.Category) @Html.Raw(Icon("cat","cat_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RatingSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    @Html.DisplayNameFor(model => model.Rating) @Html.Raw(Icon("rating","rating_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["HaveReadSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    Have Read? @Html.Raw(Icon("have","have_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["WishlistSort"]" asp-route-search="@ViewData["Search"]" asp-route-categoryId="@ViewData["FilterCategoryId"]" asp-route-haveRead="@ViewData["FilterHaveRead"]" asp-route-wishlist="@ViewData["FilterWishlist"]">
                    Wishlist? @Html.Raw(Icon("wish","wish_desc"))
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.ImageData != null && item.ImageData.Length > 0)
                {
                    var imageBase64 = Convert.ToBase64String(item.ImageData);
                    var imageSrc = $"data:{item.ImageType};base64,{imageBase64}";
                    <img src="@imageSrc" alt="@item.Title Cover" class="img-thumbnail" style="max-width: 80px; max-height: 100px;" />
                }
                else
                {
                    <img src="/img/img_placeholder.jpg" alt="No Cover Available" class="img-thumbnail" style="max-width: 80px; max-height: 100px;" />
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Author)</td>
            <td class="col-desc" title="@item.Description">@(item.Description != null && item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.BookType)</td>
            <td>@(item.Category != null ? item.Category.Name : "")</td>
            <td>
                @if (item.Rating.HasValue)
                {
                    <div class="rating-display">
                        <span class="rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= item.Rating.Value)
                                {
                                    <span style="color: #ffc107;">★</span>
                                }
                                else
                                {
                                    <span style="color: #ddd;">★</span>
                                }
                            }
                        </span>
                        <small>(@item.Rating.Value/5)</small>
                    </div>
                }
                else
                {
                    <span class="text-muted">Not rated</span>
                }
            </td>
            <td>@(item.HaveRead ? "Yes" : "No")</td>
            <td>@(item.IsWishlist ? "Yes" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
