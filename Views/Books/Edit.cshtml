@model BookDragon.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1 class="subtitle text-danger">Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
    <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label text-white"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label text-white"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div> *@
            @* <div class="form-group">
                <label asp-for="PublishedDate" class="control-label text-white"></label>
                <input asp-for="PublishedDate" class="form-control" type="date" />
                <span asp-validation-for="PublishedDate" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Description" class="control-label text-white"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="PageCount" class="control-label"></label>
                <input asp-for="PageCount" class="form-control" />
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label class="control-label text-white">Book Cover</label>
                <div>
                    @if (Model.ImageData != null && Model.ImageData.Length > 0)
                    {
                        var imageBase64 = Convert.ToBase64String(Model.ImageData);
                        var imageSrc = $"data:{Model.ImageType};base64,{imageBase64}";
                        <img src="@imageSrc" alt="@Model.Title Cover" class="img-thumbnail mb-2" style="max-width:120px;" />
                    }
                    else
                    {
                        <img src="/img/img_placeholder.jpg" alt="No Cover" class="img-thumbnail mb-2" style="max-width:120px;" />
                    }
                </div>
                <label asp-for="ImageFile" class="control-label text-white">Add Book Cover</label>
                <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label text-white">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select a Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookType" class="control-label text-white">Book Type</label>
                <select asp-for="BookType" class="form-control" asp-items="Html.GetEnumSelectList<BookDragon.Enums.BookType>()">
                    <option value="">-- Select Book Type --</option>
                </select>
                <span asp-validation-for="BookType" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label class="control-label d-block text-white">Have Read?</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="HaveRead" value="true" id="editHaveReadYes" />
                    <label class="form-check-label text-white" for="editHaveReadYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="HaveRead" value="false" id="editHaveReadNo" />
                    <label class="form-check-label text-white" for="editHaveReadNo">No</label>
                </div>
            </div>
            <div class="form-group mt-2">
                <label class="control-label d-block text-white">Wishlist?</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsWishlist" value="true" id="editWishYes" />
                    <label class="form-check-label text-white" for="editWishYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsWishlist" value="false" id="editWishNo" />
                    <label class="form-check-label text-white" for="editWishNo">No</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label text-white"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingReason" class="control-label text-white">Why did you give this rating?</label>
                <textarea asp-for="RatingReason" class="form-control" rows="3" placeholder="Share your thoughts about this book...">@Model.RatingReason</textarea>
                <span asp-validation-for="RatingReason" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="ImageData" class="control-label"></label>
                <input asp-for="ImageData" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageType" class="control-label"></label>
                <input asp-for="ImageType" class="form-control" />
                <span asp-validation-for="ImageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div> *@
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
